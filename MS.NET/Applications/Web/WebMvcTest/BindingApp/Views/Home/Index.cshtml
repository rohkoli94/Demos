@model IEnumerable<BindingApp.Visitor>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BindingApp</title>
</head>
<body>
    <h1>Welcome Visitors</h1>
    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recent)
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Frequency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recent)
            </td>
        </tr>
    }
    
    </table>
    <p>
        @using (Html.BeginForm())
        {
            <b>Name:</b>
            <input type="text" name="visitorName" required="required"/>
            <input type="submit" value="Register"/>
        }
    </p>
</body>
</html>
