<html xmlns="http://www.w3.org/1999/xhtml"
	  xmlns:jsp="http://java.sun.com/JSP/Page"
	  xmlns:c="http://java.sun.com/jsp/jstl/core">

	<jsp:useBean id="customer" class="saleswebapp.CustomerBean" scope="session"/>

	<head>
		<title>SalesWebApp</title>
	</head>
	<body>
		<h1>Invoice of ${customer.id}</h1>
		<table border="1">
			<tr>
				<th>Order Date</th>
				<th>Product No</th>
				<th>Quantity</th>
				<th>Amount</th>
			</tr>
			<c:forEach var="entry" items="${customer.invoice}">
				<tr>
					<td>${entry.orderDate}</td>
					<td>${entry.productNo}</td>
					<td>${entry.quantity}</td>
					<td>${entry.amount}</td>
				</tr>
			</c:forEach>
		</table>
		<p>
			<a href="../logout">Logout</a>
		</p>
	</body>

</html>
